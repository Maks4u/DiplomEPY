<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        android:title="@string/set_t1">

        <ListPreference
            app:defaultValue="@string/preferences_text_default"
            app:entries="@array/preferences_text_size"
            app:entryValues="@array/preferences_text_entries"
            app:iconSpaceReserved="false"
            app:key="@string/preferences_text_key"
            app:summary="@string/preferences_text_summary"
            app:title="@string/preferences_text"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        android:title="@string/set_t2">

        <ListPreference
            app:defaultValue="@string/preferences_theme_default"
            app:entries="@array/preferences_themes_list"
            app:entryValues="@array/preferences_themes_entries"
            app:iconSpaceReserved="false"
            app:key="@string/preferences_theme_key"
            app:summary="@string/preferences_theme_summary"
            app:title="@string/preferences_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false">

    <Preference
        app:iconSpaceReserved="false"
        android:key="@string/set_drop_prog"
        android:title="@string/set_drop_set" />
    </PreferenceCategory>
</PreferenceScreen>